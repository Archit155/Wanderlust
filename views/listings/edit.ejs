<% layout("/layouts/boilerplate.ejs") %>

  <body>
    

    <div class="row mt-3">
      <div class="col-8 offset-2">

<h2>Edit Listing</h2>

      <form method="post" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="">
          <label for="title" class="form-label">Title: </label>
          <input name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required >
          

        </div>

        <div class="mb-0">
          <label for="description" class="form-label">Description: </label>
          <textarea name="listing[description]" class="form-control" required><%=listing.description%></textarea>
          <div class="invalid-feedback">Write a short description</div>

        </div>

<div>
  <img src="<%=OriginalUrl%>">
</div>
        <div class="mb-1">
          <label for="image" class="form-label">Upload image </label>

          <input name="listing[image]"  type="file" class="form-control" >
          <div class="invalid-feedback">Insert image-url</div>

        </div>

        <div class="mb-1">
          <label for="location" class="form-label" class="form-control">Location: </label>
          <input name="listing[location]" value="<%=listing.location%>"  class="form-control" type="text" required>
          <div class="invalid-feedback">Enter a valid location</div>

        </div>

        <div class="mb-1">

          <label for="country" class="form-label"  >Country: </label>
          <input name="listing[country]" value="<%=listing.country%>" type="text"  class="form-control" required>
          <div class="invalid-feedback">Country name should be valid</div>

        </div>

        <div class="mb-1">

          <label for="price" class="form-label">Price: </label>
          <input name="listing[price]" value="<%=listing.price%>" type="number"  class="form-control"required>
          <div class="invalid-feedback">Enter a valid Price</div>

        </div><br/>

       <button class="btn btn-dark edit-btn">Edit</button>
      </form>
      </div>

    </div>




 
  </body>
 